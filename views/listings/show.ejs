<% layout("layouts/boilerplate") %>

<body>
  <div class="container my-4">
    <h3 class="text-center mb-4">View ArtWork</h3>
    
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <!-- Adjusted image width with a Bootstrap class for responsive behavior -->
          <img src="<%= listing.image %>" class="card-img-top" alt="NFT Image" style="max-height: 300px; object-fit: cover; width: 100%;">

          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description %></p>
            <p class="text-muted">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
          </div>

          <div class="card-footer">
            <a href="/listings" class="btn btn-secondary">Back to Listings</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
