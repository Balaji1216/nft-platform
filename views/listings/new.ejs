<% layout("layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br><br><br>
      <h3>Create a New Art</h3>
      <form method="POST" action="/listings" enctype="multipart/form-data"> <!-- Added enctype for file upload -->
        <div>
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter title of art" type="text" class="form-control"/>
        </div>
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control"></textarea>
        </div>

        <div>
          <label for="image" class="form-label">Image</label>
          <input name="image" type="file" class="form-control" />
        </div>

        <div>
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="Enter price of art" type="number" class="form-control"/>
        </div>

        <button class="btn btn-dark">ADD ART</button>
      </form>
      <br><br><br>
    </div>
  </div>
</body>
